{
  "compileOnSave": true,
  "compilerOptions": {
    "rootDir": "./",
    "target": "esnext",
    "lib": ["ES6"],
    "declaration": true,
    "declarationDir": "dist",
    "outDir": "dist",
    "allowJs": false,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "noImplicitAny": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "./",
    "paths": {
      "@assets/*": ["./src/assets/*"],
      "@components/*": ["./src/components/*"],
      "@styles/*": ["./src/styles/*"],
    },
  },
  "exclude": [
    "node_modules", 
    "coverage", 
    "babel.config.js", 
    "metro.config.js", 
    "jest.config.js", 
    "build",
    "dist",
    "rollup.config.js"
]
}
